{
  "compilerOptions": {
    "module": "commonjs",   // как будут генерироваться модули
    "noImplicitAny": true,  // нельзя использовать any
    "removeComments": true, // удалять комментарии
    "sourceMap": true,      // создать map файлы для отладки
    "outDir": "dist"        // весь результат компиляции положить в папку dist
  },
  "include": [
    "src/**/*"      // компилировать все файлы во всех директориях в директории src
  ],
  "exclude": [
    "node_modules", // не компилировать содержимое директории node_modules
    "**/*.spec.ts"  // не компилировать файлы с расширением spec.ts
  ]
}

